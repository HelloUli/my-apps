rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to task-responses folder
    match /task-responses/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to profile-pictures folder
    match /profile-pictures/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to task-reviews folder
    match /task-reviews/{taskId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 